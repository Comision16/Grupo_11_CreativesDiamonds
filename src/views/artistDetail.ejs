<!DOCTYPE html>
<html lang="en">

<body class="home__body">

    <%- include('partials/head',{ title : 'Detalle de Artista' }) %>
        <%- include('partials/header') %>

            <section class="section__black">
                <h2>Esto es... <%= band.name %>
                </h2>
                <div class="col-10 p-3 text-center align-items-center">
                    <img src="/images/bands/<%= band.image %>" alt="" class="img-fluid mb-3">
                    <h5>"<%= band.phrase %>"</h5>

                </div>
                <div class="col-10 col-md-8 mt-5">
                    <div class="row align-items-center g-5">
                        <div class="col-12 col-md-6">
                            <h6>
                                <%= band.dateFounded %> - <%= band.dateEnded %>
                            </h6>
                        </div>
                        <div class="col-12 col-md-6">
                            <h6>Conciertos realizados: <%= band.totalShows %>
                            </h6>
                        </div>
                        <div class="col-12 col-md-6">
                            <h6>Integrantes actuales</h6>
                        </div>
                        <div class="col-12 col-md-6">
                            <h6>Próximo concierto: <%= band.nextShows %>
                            </h6>
                        </div>
                    </div>
                    <div class="col-12 mt-5 p-5">
                        <h5>Historia de la banda:</h5>
                        <p>
                            <%= band.history %>
                        </p>
                    </div>
                </div>
            </section>
            <section class="section__white">

             
                
            </section>
          

            <section class="section__red">
                <div class="row mb-3 m-5">

                    <% albums.forEach(({id,title,image,year,description,price, discount})=> { %>
                        <div class="col-6 col-md-4" id="album<%= id %>">
                           <a href="/products/albums/detail/<%= id %>"> <img class="img-fluid w-50" style="border-radius: 50%;"
                            src="/images/albums/<%= image %>" alt=""></a>
                           
                          

                            <p><b>
                                    <%= title %>
                                </b></p>
                            <small>
                                <%= year %>
                            </small>
                        </div>
                        <%- include('partials/albumDetailModal',{
                            id,title,image,year,description,price, discount
                          }) %>
                        <% }) %>
                </div>
            </section>


            <section class="section__white">
                <div class="row mt-3 p-3 justify-content-around mx-auto align-items-center">

                    <% merchs.forEach(merch=> { %>
                        <div class="col-8 col-md-4">
                            <div class="card align-items-center p-5">
                                <img src="/images/<%= merch.image %>" class="card-img-top" alt="">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= merch.name %>
                                    </h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Tipo de item</li>
                                    <li class="list-group-item"><b>PRECIO:</b> us$ <%= merch.price %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-8 col-md-6">
                            <p><b>Descripción: </b>
                                <%= merch.description %>
                            </p>
                        </div>
                        <div class="col-8 d-flex justify-content-evenly p-3">
                            <a href="" class="btn btn-dark">Botón de cantidad</a>
                            <a href="" class="btn btn-dark">Añadir al carrito</a>
                        </div>
                        <% }) %>


                </div>
            </section>
            <section class="section__yellow">
                <div class="row m-3">

                    <% merchs.forEach(merch=> { %>
                        <div class="col-10 col-md-3 p-2 bg-white">
                            <img class="img-fluid" src="/images/<%= merch.image %>" alt="">
                        </div>
                        <% }) %>

                </div>
            </section>


            <!-- Pie de página -->
            <%- include('partials/footer') %>


</body>

</html>