<div class="modal fade" id="modalAlbumDetail<%= id %>" tabindex="-1" aria-labelledby="modalAlbumDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content col-10 w-75">
            <div class="modal-body">
                <div class="row">
                    <div class="modal-header justify-content-center">
                        <h2>
                            <%= title %>
                        </h2>
                    </div>
                    <div class="modal-body">
                        <img src="/images/albums/<%= image %>" class="img-fluid" alt="imagen">
                    </div>
                    <div class="col-12 text-center">
                        <h3>
                            Us$ <%= price %>
                        </h3>
                        <a class="btn btn-dark" href="/products/albums/detail/<%= id %>">Ver como visitante</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>