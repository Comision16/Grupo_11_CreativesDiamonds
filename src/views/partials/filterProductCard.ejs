<div class="product__body__card"><!-- Card -->
    <figure class="product__body__card__figure">
        <% if (productType === 'vinilos') { %>
            <a href="/products/detail/<%= id %>">
                <img src="/images/<%= mainImage %>" alt="Imagen del Producto">
            </a>
        <% } else if (productType === 'remeras') { %>
            <a href="/products/detail-shirt/<%= id %>">
                <img src="/images/<%= mainImage %>" alt="Imagen del Producto">
            </a>
        <% } %>
    </figure>
    <div class="product__body__card_info"><!-- Card body -->
        <h3><%= title %></h3>
        <h3><%= artist %></h3>
        <h5><%= price %></h5>

        <div class="product__body__card_info_discount">
        <h3><%= price * (1 -( discount / 100)) %></h3>
        <h4><%= discount %>%</h4>
    </div>
    </div>
    <div class="product__body__card__icons">
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-cart-shopping"></i>
    </div>
    <div class="product__body__card__button">
        <% if (productType === 'vinilos') { %>
            <a href="/products/detail/<%= id %>">VER MÁS</a>
        <% } else if (productType === 'remeras') { %>
            <a href="/products/detail-shirt/<%= id %>">VER MÁS</a>
        <% } %>
    </div>
</div>