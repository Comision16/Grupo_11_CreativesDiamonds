<div id="login-modal" class="header-modal">
    <div class="header-modal-content">
        <form action="/users/login" method="POST" id="form">
            <div class="login-titulo">
                <h4>¡Bienvenido de nuevo!</h4>
            </div>

            <div class="login-grupo1">
                <div class="login-grupoA">
                    <label for="email">Email</label>
                    <input type="email" class="form-control  <%= locals.errors && (errors.email && 'is-invalid') %>" name="email" id="email" value="<%= locals.old && (old.email && old.email) %>">
            <p  style="color: red;"><%= locals.errors && errors.email ? errors.email.msg  : '' %></p>
                    <input type="checkbox" id="recordarme" name="recordarme">
                    <label for="recordarme">Recordarme</label>
                </div>
                <div class="login-grupoB">
                    <label for="password">Contraseña:</label>
                    <input type="password" class="form-control  <%= locals.errors && (errors.password && 'is-invalid') %>" name="password" id="password">
                    <p  style="color: red;"><%= locals.errors && errors.password ? errors.password.msg  : '' %></p>
                    <p><a href="#">¿Olvidaste tu contraseña?</a></p>
                </div>
            </div>
            <button type="submit" id="login-button">Iniciar Sesión</button>
        </form>
    </div>
</div>
