<!DOCTYPE html>
<html>

<%- include('../partials/head',{ title : 'ADMIN' }) %>

    <body>
        <%- include('../partials/header') %>

            <main class="container">
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <form id="albumForm" action="" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="tituloAlbum" class="form-label">Título del Álbum</label>
                                <input type="text" class="form-control" id="tituloAlbum" name="tituloAlbum">
                            </div>
                        
                            <div class="mb-3">
                                <label for="discografica" class="form-label">Discográfica</label>
                                <input type="text" class="form-control" id="discografica" name="discografica">
                            </div>
                        
                            <div class="mb-3">
                                <label for="anioPublicacion" class="form-label">Año de Publicación</label>
                                <input type="number" class="form-control" id="anioPublicacion" name="anioPublicacion">
                            </div>
                        
                            <div class="mb-3">
                                <label for="precio" class="form-label">Precio</label>
                                <input type="number" step="0.01" class="form-control" id="precio" name="precio">
                            </div>
                        
                            <div class="mb-3">
                                <label for="descuento" class="form-label">Descuento (%)</label>
                                <input type="number" step="0.01" class="form-control" id="descuento" name="descuento">
                            </div>
                        
                            <div class="mb-3">
                                <label for="banda" class="form-label">Banda</label>
                                <select class="form-select" id="banda" name="banda">
                                    <option value="banda1">Banda 1</option>
                                    <option value="banda2">Banda 2</option>
                                    <option value="banda3">Banda 3</option>
                                </select>
                            </div>
                        
                            <div class="mb-3">
                                <label for="genero" class="form-label">Género</label>
                                <select class="form-select" id="genero" name="genero">
                                    <option value="genero1">Género 1</option>
                                    <option value="genero2">Género 2</option>
                                    <option value="genero3">Género 3</option>
                                </select>
                            </div>
                        
                            <div class="mb-3">
                                <label for="exclusive" class="form-label">Exclusive</label>
                                <input type="checkbox" id="exclusive" name="exclusive">
                            </div>
                        
                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripción</label>
                                <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
                            </div>
                        
                            <div class="mb-3">
                                <label for="imagenAlbum" class="btn btn-secondary">Imagen del Álbum</label>
                                <input hidden type="file" class="form-control" id="imagenAlbum" name="imagenAlbum">
                            </div>
                        
                            <div class="mb-3">
                                <button type="button" class="btn btn-success" id="enviarForm">Actualizar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>



            <%- include('../partials/footer') %>

    </body>

</html>