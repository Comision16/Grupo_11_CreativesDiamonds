<!DOCTYPE html>
<html lang="en">

<body class="home__body">

    <%- include('partials/head',{ title : 'ARTISTAS' }) %>
        <%- include('partials/header') %>

            <div class="home__bienvenida">
                <img class="img-fluid" src="/artistas.png" alt="">
            </div>

            <section class="section__black">
                <div class="container">
                    <div class="row justify-content-evenly align-items-center">

                        <% bands.forEach(band=> { %>
                            <div class="col-10 col-md-4 w-25 m-3">
                                <div class="card" style="box-shadow: 1px 5px 25px 2px white">
                                    <div class="card-header">
                                        <a href="/products/artists/detail/<%= band.id %>"> <img class="img-fluid" src="/images/bands/<%= band.image %>" alt="" style="box-shadow: -5px -1px 12px 2px black"></a>
                                    </div>
                                    <div class="card-body">
                                        <h3>
                                            <%= band.name %>
                                        </h3>
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn btn-dark" href="/products/artists/detail/<%= band.id %>">VER
                                            DETALLES</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>

                             
                    </div>
                </div>
            </section>


</body>
<!-- Pie de pÃ¡gina -->
<%- include('partials/footer') %>



</html>